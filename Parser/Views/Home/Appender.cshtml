@model HomeAppenderViewModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Сравнение цен</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/appenderstyle.css">
</head>
<body>

    <div class="form-container">
        <h3>Сравнение цен</h3>
        <form action="/home/appender" method="post">
            <!-- Поле для выбора названия товара -->
            <label for="ProductName">Название товара:</label>
            <select id="ProductName" name="model.ProductName" required>
                @foreach (var product in ViewBag.ProductNames)
                {
                    <option value="@product.Name">@product.Name</option>
                }
            </select>

            <!-- Поле для добавления нового названия товара -->
            <label for="ProductName">Или введите новое название:</label>
            <input type="text" id="ProductName" name="model.ProductName" placeholder="Новое название товара">

            <!-- Поле для ссылки на первом сайте -->
            <label for="LinkDomotex">Ссылка на товар domotex.ru:</label>
            <input type="text" id="LinkDomotex" name="model.LinkDomotex" placeholder="Введите ссылку" required>

            <!-- Поле для ссылки на втором сайте -->
            <label for="LinkVodoparad">Ссылка на товар vodoparad.ru:</label>
            <input type="text" id="LinkVodoparad" name="model.LinkVodoparad" placeholder="Введите ссылку" required>

            <button class="btn btn-primary" name="action" onclick="location.href='/Home/DataViewer'">Добавить</button>
        </form>
    </div>
</body>
</html>

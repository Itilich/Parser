<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Сравнение цен</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/appenderstyle.css">
</head>
<body>

    <div class="form-container">
        <h3>Сравнение цен</h3>
        <form id="priceForm" action="/home/appender" method="post" novalidate>
            <!-- Поле для ввода названия товара с подсказками -->
            <label for="ProductName">Название товара:</label>
            <input type="text" id="ProductName" name="model.ProductName" placeholder="Введите название товара" list="productNames" required>

            <datalist id="productNames">
                @foreach (var product in ViewBag.ProductNames)
                {
                    <option value="@product.Name"></option>
                }
            </datalist>

            <!-- Поле для ссылки на первом сайте -->
            <label for="LinkDomotex">Ссылка на товар domotex.ru:</label>
            <input type="text" id="LinkDomotex" name="model.LinkDomotex" placeholder="Введите ссылку" required>

            <!-- Поле для ссылки на втором сайте -->
            <label for="LinkVodoparad">Ссылка на товар vodoparad.ru:</label>
            <input type="text" id="LinkVodoparad" name="model.LinkVodoparad" placeholder="Введите ссылку" required>

            <button class="btn btn-primary" type="submit">Добавить</button>
        </form>
    </div>

</body>
</html>

<style>
    datalist#productNames {
        max-height: 50px; /* ограничение по высоте */
        overflow-y: auto; /* добавляем прокрутку */
    }

    input[type="text"] {
        width: 100%;
        box-sizing: border-box;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.getElementById("priceForm");

        form.addEventListener("submit", function (event) {
            var linkDomotex = document.getElementById("LinkDomotex").value;
            var linkVodoparad = document.getElementById("LinkVodoparad").value;

            // Проверка ссылки Domotex
            if (!linkDomotex.startsWith("https://www.domotex.ru/")) {
                alert("Ссылка на товар Domotex должна начинаться с https://www.domotex.ru/");
                event.preventDefault(); // Останавливаем отправку формы
                return false;
            }

            // Проверка ссылки Vodoparad
            if (!linkVodoparad.startsWith("https://www.vodoparad.ru/")) {
                alert("Ссылка на товар Vodoparad должна начинаться с https://www.vodoparad.ru/");
                event.preventDefault(); // Останавливаем отправку формы
                return false;
            }
        });

        // Ограничиваем количество отображаемых элементов в datalist до 5
        var datalist = document.getElementById("productNames");
        var options = datalist.getElementsByTagName("option");
        var maxOptions = 5;
        for (var i = options.length - 1; i >= maxOptions; i--) {
            datalist.removeChild(options[i]);
        }
    });
</script>
